{
"manifest_version": 3,
"name": "禁止ワード",
"description": "設定した禁止ワードが含まれたWEBサイトを表示しない拡張機能です。",
"version": "0.1",
    "icons": {
        "16": "icon/16.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "content_scripts": [
        {
            "matches": [ "*://*/*"],
            "js": ["main_script.js"]
        }
    ],
    "permissions": [
        "storage"
    ], 
    "action": {
        "default_title": "禁止ワードメニュー",
        "default_icon": "icon/48.png",
        "default_popup": "pags/popup.html"
    },
    "options_page": "pags/options.html"


}